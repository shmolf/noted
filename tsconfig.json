{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "lib": ["esnext", "webworker"],
        "paths": {
            "SCRIPTS/*": ["./assets/scripts/*"],
            "STYLES/*": ["./assets/styles/*"],
            "Images/*": ["./assets/images/*"],
            "NODE/*": ["./node_modules/*"]
        }
    },
    // "include": ["src/**/*.ts"],
    "exclude": [
        "public/build/**/*",
        "packages-cache"
    ]
  }
