{
    "compilerOptions": {
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "checkJs": true,
      "baseUrl": "./",
      "paths": {
        "JS/*": ["./assets/js/*"],
        "CSS/*": ["./assets/css/*"],
        "Images/*": ["./assets/images/*"],
        "NODE/*": ["./node_modules/*"]
      }
    },
    "exclude": [
        "node_modules",
        "public/build/**/*",
        "packages-cache"
    ]
  }
